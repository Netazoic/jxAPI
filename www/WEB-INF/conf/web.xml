<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd"
[ 
   <!ENTITY web_local SYSTEM "./web.local.xml">  
]
>
<web-app>

        &web_local;


	<servlet>
		<servlet-name>jxLRS</servlet-name>
		<servlet-class>com.netazoic.jxapi.jxLRS</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>jxLRS</servlet-name>
		<url-pattern>/jx</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>jxLRS</servlet-name>
		<url-pattern>/jx/*</url-pattern>
	</servlet-mapping>

	<context-param>
		<param-name>HostName</param-name>
		<param-value>jxapid</param-value>
	</context-param>
	<context-param>
		<param-name>AppName</param-name>
		<param-value>jxapi Dev</param-value>
	</context-param>

	<!-- LRS Endpoint params -->
	<context-param>
		<param-name>LRS_Endpoint</param-name>
		<param-value>jxapi Dev</param-value>
	</context-param>
	<context-param>
		<param-name>LRS_Username</param-name>
		<param-value>jomofrodo</param-value>
	</context-param>
	<context-param>
		<param-name>LRS_Password</param-name>
		<param-value>foo</param-value>
	</context-param>

	<resource-ref>
		<description>postgreSQL DB</description>
		<res-ref-name>jdbc/postgres</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>


</web-app>
